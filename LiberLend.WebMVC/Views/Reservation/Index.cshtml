
@{
    ViewBag.Title = "Reservations";
}

<h2 class="liberlend-text">
    @Html.ActionLink("Incoming Reservations", "IndexAsOwner")
</h2>
<h2 class="liberlend-text">
    @Html.ActionLink("Outgoing Reservations", "IndexAsBorrower")
</h2>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

