<p>
    @if (Model.ApplicationUserId == User.Identity.GetUserId())
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.BookId });
        <text> | </text>
        @Html.ActionLink("Delete", "Delete", new { id = Model.BookId });
        <text> | </text>
        <a href="#" onclick="history.go(-1);">Back</a>
    }
    else if (Model.UserIsMember)
    {
        @Html.ActionLink("Reserve", "../Reservation/Create", new { id = Model.BookId });
        <text> | </text>
        <a href="#" onclick="history.go(-1);">Back</a>
    }
    else
    {
        <a href="#" onclick="history.go(-1);">Back</a>
    }
